.burger.popup(data-id="burger") 
	.popup_bg.remove 
	.popup_main.burger_main
		.popup_close.remove 
			+icon('close') 
		.burger_logo
			include ../components/logo
		nav.header_nav.link-hover 
			ul
				-
					let navBurger = [
						{
							name: 'Чем занимаемся', 
							link: '#about'
						},
						{
							name: 'Преимущества', 
							link: '#what'
						},
						{
							name: 'Услуги', 
							link: '',
							submenu: true
						},
						{
							name: 'Отзывы',
							link: '#reviews'
						},
						{
							name: 'Контакты', 
							link: '#contacts'
						},
					]
				each item in navBurger
					li 
						a(href=item.link class="remove")=item.name
						if item.submenu
							ul.sub-menu 
								each sub in ['Порошковая покраска','Плазморез','Трубогиб','Сварка аргон и обычная','Восстановление дисков на авто с порошковой покраской','Автоматика для ворот откатных и распашных','Ворота секционные установка монтаж','Ворота распашные','Сварка аргон и обычная','3D заборы и навесы']
									li 
										a(href="#" class="remove")=sub
		ul.header_contacts.link-hover 
			each item in ['mail@mail.ru', '+7 000 000 00 00']
				li 
					a(href="#")=item
